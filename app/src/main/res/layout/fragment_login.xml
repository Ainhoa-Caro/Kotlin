<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/Correo_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textviewlogin"
        android:ems="10"
        android:hint="@string/Correo"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/RecuperarContrase単a_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/RecuperarContrase単a"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Registrarse_boton"
        app:layout_constraintStart_toStartOf="@+id/Login_boton"
        app:layout_constraintTop_toBottomOf="@+id/Registrarse_boton" />

    <Button
        android:id="@+id/Registrarse_boton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/botoneslogin"
        android:text="@string/Registrarse"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/Password_edittext"
        app:layout_constraintTop_toBottomOf="@+id/Password_edittext" />

    <Button
        android:id="@+id/Login_boton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/botoneslogin"
        android:text="@string/Login"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/Password_edittext"
        app:layout_constraintTop_toBottomOf="@+id/Password_edittext" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/Password_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textviewlogin"
        android:ems="10"
        android:hint="@string/Contrase単a"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/Correo_edittext"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Correo_edittext"
        app:layout_constraintTop_toBottomOf="@+id/Correo_edittext" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/boton_fb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/Registrarse_boton"
        app:layout_constraintStart_toStartOf="@+id/Login_boton"
        app:layout_constraintTop_toBottomOf="@+id/RecuperarContrase単a_textView" />

    <Button
        android:id="@+id/boton_google"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/common_google_signin_btn_icon_dark"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/Registrarse_boton"
        app:layout_constraintStart_toStartOf="@+id/Login_boton"
        app:layout_constraintTop_toBottomOf="@+id/boton_fb" />


</androidx.constraintlayout.widget.ConstraintLayout>